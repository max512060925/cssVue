border-1px($color)
  position:relative;
  &:after
    display:block;
    position:absolute;
    left:0;
    bottom:0;
    width:100%;
    border-bottom:1px solid $color;
    content:' ';
boder-none()
  &:after
    display:none;
bg-img($url)
  background:url($url+"@2x.png") center center no-repeat;
  @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
    background:url($url+"@3x.png") center center no-repeat;
